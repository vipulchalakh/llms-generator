{
  "functions": {
    "api/generate-llmstxt.py": {
      "runtime": "python3.9"
    }
  },
  "builds": [
    { "src": "pages/api/*.py", "use": "@vercel/python" },
    { "src": "pages/**/*.tsx", "use": "@vercel/next" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/pages/api/generate-llmstxt.py" }
  ]
} 